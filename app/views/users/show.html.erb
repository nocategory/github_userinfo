<div class="container">
  <div class="username_form">
    <div class="username_image">
      <img id="avatar" src="<%= @user.avatar_url %>">
    </div>
    <p>
      <strong>Login:</strong>
      <%= @user.login %>
    </p>
    
    <p>
      <strong>Name:</strong>
      <%= @user.name ? @user.name : 'Not specified' %>
    </p>

    <p>
      <strong>Followers:</strong>
      <%= @user.followers %>
    </p>

    <p>
      <strong>Public repos:</strong>
      <%= @user.public_repos %>
    </p>

    <p>
      <strong>Repos URL:</strong>
      <%= @user.repos_url %>
    </p>
    <%= link_to 'Back', '/' %>
  </div>
</div>